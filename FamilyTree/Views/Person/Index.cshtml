@model PersonVM

@{
    Layout = "_Layout";
}

@section Sidebar
{
  @await Component.InvokeAsync("Sidebar")
}

@section Slidebr
{
  @await Component.InvokeAsync("Slidebar")
}

<mian>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">   
                @using (Html.BeginForm("AddPerson", "Person", FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-6">
                            @Html.Label("FirstName", "First name", new{@class = "form-label"})
                            @Html.TextBox("FirstName", "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(p => p.FirstName)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">  
                            @Html.Label("LastName", "Last name", new{@class = "form-label"})
                            @Html.TextBox("LastName", "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(p => p.LastName)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            @Html.Label("Age", "Age", new{@class = "form-label"})
                            @Html.TextBox("Age", "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(p => p.Age)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <hr/>
                            <button type="submit" class="btn brown-button">Add</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</mian>