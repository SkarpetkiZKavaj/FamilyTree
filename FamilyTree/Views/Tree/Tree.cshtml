@using FamilyTree.Controllers
@model FamilyTree.ViewModels.TreeVM

@{
    Layout = "_Layout";
}

@section Sidebar
{
  @await Component.InvokeAsync("Sidebar")
}
 
@section Slidebr
{
  @await Component.InvokeAsync("Slidebar")
}

<!DOCTYPE html>

<html lang="en">
<head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <title>Tree</title>
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    </head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">   
            @using (Html.BeginForm("Update", "Tree", new { treeId = Model.Id }, FormMethod.Post))
            {
                <div class="row">
                    <div class="col-4">
                        @Html.LabelFor(t => t.Name, "Name of tree")
                        @Html.TextAreaFor(t => t.Name, 1, 5, new { @class = "form-control" })
                    </div>
                    <div class="col-4">
                        <h4 class="text-center">Added persons</h4>
                        <ul class="list-group list-group-flush bg-transparent">
                            <li>
                                <p class="text-center">Here will be added persons</p>
                            </li>
                        </ul>
                    </div>
                    <div class="col-4">
                        <h4 class="text-center">All persons</h4>
                        <ul class="list-group list-group-flush bg-transparent">
                            <li>
                                <p class="text-center">Here will be all persons</p>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <hr/>
                        <div class="row ">
                            <div class="col-1">
                                <button type="submit" class="btn" style="background-color: rgba(95, 50, 0, 1); color: rgba(255, 255, 255, 1);">Save</button>
                            </div>
                            <div class="col-1">
                                @Html.ActionLink("Back", "Index", "Home", null, new { @class = "btn", style = "background-color: rgba(95, 50, 0, 1); color: rgba(255, 255, 255, 1);" })
                            </div>
                            <div class="col-10">
                                @Html.ActionLink("Delete", "Delete", "Tree", new { treeId = Model.Id }, new {@class="btn", style="background-color: rgba(140, 40, 0, 1); color: rgba(255, 255, 255, 1);"})
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
</body>
</html>