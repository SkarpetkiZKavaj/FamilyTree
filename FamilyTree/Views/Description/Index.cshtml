@model PersonVM

@{
    Layout = "_Layout";
}

@section Sidebar
{
  @await Component.InvokeAsync("Sidebar")
}
 
@section Slidebr
{
  @await Component.InvokeAsync("Slidebar")
}


<!DOCTYPE html>

<html lang="en">
    <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <title>Description</title>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    </head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">   
            @using (Html.BeginForm("ChangeInformation", "Description", new { personId = Model.Id }, FormMethod.Post))
            {
                <div class="row">
                    <div class="col-6">
                        @Html.LabelFor(m => m.FirstName, "First name")
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">  
                        @Html.LabelFor(m => m.LastName, "Last name")
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        @Html.LabelFor(m => m.Age, "Age")
                        @Html.TextBoxFor(m => m.Age, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        @Html.LabelFor(m => m.Description.History, "History")
                        @Html.TextAreaFor(m => m.Description.History, 10, 10, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <hr/>
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" class="btn" style="background-color: rgba(95, 50, 0, 1); color: rgba(255, 255, 255, 1);">Save</button>
                            </div>
                            <div class="col-6">
                                @Html.ActionLink("Back", "Index", "Home", null, new { @class = "btn", style = "background-color: rgba(95, 50, 0, 1); color: rgba(255, 255, 255, 1);" })
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>