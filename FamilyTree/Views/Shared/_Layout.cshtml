@using FTEntities.IdentityModels.User
@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
<nav class="navbar navbar-expand-lg flex-column flex-md-row" style="background-color: rgba(52, 120, 62, 0.25);">
    <a class="navbar-brand px-4" href="~/Home/Index">Home</a>
    <div class="collapse navbar-collapse justify-content-end">
        <ul class="nav ">
            @if (!SignInManager.IsSignedIn(User))
            {
                <li class="nav-item">
                    <a class="btn" href="~/Account/Register" style="background-color: rgba(52, 120, 62, 1);">Sign up</a>
                </li>
                <li class="nav-item px-4">
                    <a class="btn" href="~/Account/Login" style="background-color: rgba(52, 120, 62, 1);">Log in</a>
                </li>
            }
            else
            {
                <li class="nav-item px-4">
                    <a class="btn" href="~/Account/Logout" style="background-color: rgba(52, 120, 62, 1);">Log out</a>
                </li>
            }
        </ul>
    </div>

</nav>
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    @RenderBody()
                </div>
            </div>
        </div>
        <footer class="fixed-bottom">
            <div class="text-center p-3" style="background-color: rgba(52, 120, 62, 1);">
                Â© 2022 - FamilyTree:
                <a class="text-white" href="https://github.com/SkarpetkiZKavaj/FamilyTree">GitHub</a>
            </div>
        </footer>
</body>
</html>