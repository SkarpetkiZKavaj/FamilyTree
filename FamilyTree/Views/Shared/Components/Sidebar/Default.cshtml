@model List<PersonVM>

<h3 class="text-center">Persons</h3>
<hr/>
<ul class="list-group list-group-flush bg-transparent">
    @foreach (var person in Model)
    {
        <li class="list-group-item bg-transparent">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-6">
                        @Html.ActionLink(person.FirstName + " " + person.LastName + ".", "Index", "Description", new { personId = person.Id }, new { @class = "btn item-link"})
                    </div>
                    <div class="col-6">
                        @Html.ActionLink("Delete", "Delete", "Person", new { personId = person.Id }, new { @class = "btn red-button" })
                    </div>
                </div>
            </div>
        </li>
    }
    <hr/>
    @Html.ActionLink("Add", "Index", "Person", null, new { @class = "btn brown-button"})
</ul>