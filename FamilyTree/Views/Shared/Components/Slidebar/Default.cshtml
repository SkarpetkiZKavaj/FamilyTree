@model List<FamilyTree.ViewModels.TreeVM>

<h3 class="text-center">Trees</h3>
<hr/>
<ul class="list-group list-group-horizontal list-group-border-color: bg-transparent" style="overflow:auto; white-space: nowrap;">
    <li class="list-group-item bg-transparent border-0">
        @Html.ActionLink("Add", "Index", "Tree", null, new { @class = "btn", style = "background-color: rgba(95, 50, 0, 1); color: rgba(255, 255, 255, 1);" })
    </li>
    @foreach (var tree in Model)
    {
        <li class="list-group-item bg-transparent border-0">
            @Html.ActionLink(tree.Name + ".", "GetTree", "Tree", new { treeId = tree.Id }, new { @class = "btn", style = "background-color: rgba(208, 193, 172, 0); color: rgba(0, 0, 0, 1); text-decoration: none;" })
        </li>
    }
</ul>